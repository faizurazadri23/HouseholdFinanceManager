<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faizurazadri.householdfinancemanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.HouseholdFinanceManager">
        <activity
            android:name=".ui.user.RegistrationActivity"
            android:exported="true"
            android:label="@string/txt_buat_akun"
            android:parentActivityName=".ui.user.LoginActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.user.RegistrationActivity" />
        </activity>
        <activity
            android:name=".ui.user.LoginActivity"
            android:exported="true"
            android:label="@string/txtlogin" />

        <activity
            android:name=".MainMenuActivity"
            android:exported="true"
            android:label="@string/title_activity_main_menu" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>